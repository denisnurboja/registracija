<h1>Listing registrations <%= @products.model%></h1>

<table class="table">
  <thead>
    <tr>
      <th>No. Registracije</th>
      <th>Ime</th>
      <th>Serial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.registrations.each do |registration| %>
      <tr>
        <td><%= registration.id %></td>
        <td><%= registration.name %></td>
        <td><%= registration.serial %></td>
        <td><%= link_to 'Show', product_registration_path(@products,registration) %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_product_registration_path(@products), class: 'btn btn-primary btn-xs'%>
