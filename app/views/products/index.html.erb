<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{product.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{product.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
        <%= product.model %></td>
        </span>


        <td><%= link_to 'Registracija', product_registrations_path(product) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
